//- Colors
:root
  --color-white: #fff
  --color-blue: #01182e
  --color-bronze: #b0724e

//- Typo

:root
  --base-font-family: "freight display pro"
  --base-heading-font-weight: 500
  --base-font-size: 20px
  --base-font-weight: 400
  --base-line-height: 24px
  --base-text-color: #FFF
  --secondary-font-family: "Alright Sans Medium"
  --base-selection-background-color: #011884

//- Grid

:root
  --grid-gutter: 0px
  --grid-max-width: 100%

//- Oversize mq
@custom-media --iphone4 screen and (max-width: 320px) and (max-height: 480px)
@custom-media --tablet screen and (min-width: 667px)
@custom-media --desktop screen and (min-width: 1025px)
@custom-media --oversize screen and (min-width: 1500px)
